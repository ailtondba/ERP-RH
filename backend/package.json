{
  "name": "erp-rh-backend",
  "version": "1.0.0",
  "description": "Backend para o sistema ERP de Recursos Humanos",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "pkg server.js --target node18-win-x64 --output erp-backend.exe",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "erp",
    "rh",
    "api",
    "nodejs",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.2.0",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.4.0",
    "pdfkit": "^0.17.1",
    "pkg": "^5.8.1",
    "sequelize": "^6.32.1",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "nodemon": "^2.0.22"
  },
  "pkg": {
    "assets": [
      "node_modules/sqlite3/lib/binding/**/*",
      "node_modules/better-sqlite3/build/**/*"
    ],
    "scripts": [
      "config/**/*.js",
      "controllers/**/*.js",
      "middlewares/**/*.js",
      "models/**/*.js",
      "routes/**/*.js",
      "utils/**/*.js"
    ]
